<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">

    <!-- Codificación del proyecto -->
    <property name="charset" value="UTF-8"/>

    <!-- No tabuladores, solo espacios -->
    <module name="FileTabCharacter">
        <property name="eachLine" value="true"/>
    </module>

    <!-- Detectar espacios en blanco al final de la línea -->
    <module name="RegexpSingleline">
        <property name="format" value="\s+$"/>
        <property name="message" value="Trailing whitespace"/>
        <property name="minimum" value="0"/>
        <property name="maximum" value="0"/>
    </module>

    <!-- Longitud máxima de línea -->
    <module name="LineLength">
        <property name="max" value="120"/>
        <property name="ignorePattern" value="^package|^import"/>
    </module>

    <!-- Reglas que analizan el código Java -->
    <module name="TreeWalker">

        <!-- Nombres de clases: PascalCase -->
        <module name="TypeName">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Nombres de métodos: camelCase -->
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Campos: camelCase -->
        <module name="MemberName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Variables locales: camelCase -->
        <module name="LocalVariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Constantes: MAYUSCULAS_CON_GUIONES -->
        <module name="ConstantName">
            <property name="format" value="^[A-Z][A-Z0-9_]*$"/>
        </module>

        <!-- Nombres de parámetros: camelCase -->
        <module name="ParameterName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Componentes de records -->
        <module name="RecordComponentName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Nombres de parámetros en catch: camelCase -->
        <module name="CatchParameterName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- No dejar bloques vacíos tipo: if () {} -->
        <module name="EmptyBlock">
            <property name="option" value="STATEMENT"/>
        </module>

        <!-- Llave de apertura al final de la línea de la declaración -->
        <module name="LeftCurly">
            <property name="option" value="eol"/>
        </module>

        <!-- Llave de cierre en su propia línea -->
        <module name="RightCurly">
            <property name="option" value="alone"/>
        </module>

        <!-- Obligar a usar llaves incluso en if/for/while de una línea -->
        <module name="NeedBraces"/>

        <!-- Espacio después de coma -->
        <module name="WhitespaceAfter">
            <property name="tokens" value="COMMA"/>
        </module>

        <!-- Una sola sentencia por línea -->
        <module name="OneStatementPerLine"/>

        <!-- Imports: sin '*' y sin no usados/redundantes -->
        <!--
        <module name="AvoidStarImport"/>
        -->
        <module name="UnusedImports"/>
        <module name="RedundantImport"/>

        <!-- No dejar catch completamente vacíos -->
        <module name="EmptyCatchBlock">
            <property name="exceptionVariableName" value="ignored|unused|e"/>
        </module>

        <!-- Separar miembros con líneas en blanco (métodos, campos, bloques) -->
        <module name="EmptyLineSeparator">
            <property name="allowNoEmptyLineBetweenFields" value="true"/>
        </module>

        <!-- Requerir default en los switch -->
        <module name="MissingSwitchDefault"/>

        <!-- Evitar números mágicos (menos -1, 0 y 1) -->
        <module name="MagicNumber">
            <property name="ignoreNumbers" value="-1,0,1"/>
            <property name="ignoreHashCodeMethod" value="true"/>
            <property name="ignoreAnnotation" value="true"/>
        </module>

        <!-- Control básico de indentación -->
        <module name="Indentation">
            <property name="basicOffset" value="4"/>
            <property name="braceAdjustment" value="0"/>
            <property name="caseIndent" value="4"/>
            <property name="lineWrappingIndentation" value="8"/>
        </module>

        <!-- Marcar comentarios TODO -->
        <module name="TodoComment"/>

    </module>
</module>